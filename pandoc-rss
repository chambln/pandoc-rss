#!/bin/sh

die() {
    >&2 printf '%s: %s\n' "${0##*/}" "$1"
    exit "${2:-1}"
}

TMPDIR=${TMPDIR:-/tmp}
mkdir -p "$TMPDIR"
tmp="$(mktemp -d "$TMPDIR/pandoc-rss.XXXXXXXX")"
[ -n "$tmp" ] || die 'Failed to create temporary directory.'

printf '$date$\n' > "$tmp/template.date"

cat > "$tmp/item.xml" <<'EOF'
<item>
<title>$title$</title>
<link>$linkprefix$</link>
<guid>$linkprefix$</guid>
$if(description)$
<description>$description$</description>
$endif$
<pubDate>$date$</pubDate>
</item>
EOF

while :; do
    case "$1" in
    -f|--format)
        format="$2"
        shift 2
        ;;
    -h|--help)
        die "Usage: ${0##*/} -f FORMAT FILE [FILE ...]"
        ;;
    --)
        shift
        break
        ;;
    -*)
        die "No such option ‘$1’"
        ;;
    *)
        break
        ;;
    esac
done

[ -n "$format" ] || die 'Please specify a format string.'

for markup_file do
    date="$(pandoc --template="$tmp/template.date" "$markup_file")"
    date="$(date -u -d "$date" '+%a, %d %b %Y %T +0000')"
    filename=${markup_file##*/}
    basename=${filename%.*}
    linkprefix="$(printf "$format" "$basename")"
    pandoc \
      --template="$tmp/item.xml" \
      -V "date:$date" \
      -V "linkprefix:$linkprefix" \
      "$markup_file"
done

rm -rf "$tmp"
