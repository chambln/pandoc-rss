#!/usr/bin/env rc

printf %s\n (
    '<item>'
    '<title>$title$</title>'
    '<link>$guid$</link>'
    '<guid>$guid$</guid>'
    '$if(description)$'
    '<description>$description$</description>'
    '$endif$'
    '$if(lang)$'
    '<language>$lang$</language>'
    '$endif$'
    '<pubDate>$date$</pubDate>'
    '<lastBuildDate>$lastBuildDate$</lastBuildDate>'
    '</item>'
) > /tmp/pandoc-rss.xml

lastBuildDate = ``$nl{date}

pandoc --template=/tmp/pandoc-rss.xml -V lastBuildDate:$^lastBuildDate $*
